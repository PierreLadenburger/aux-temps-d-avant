<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAZwFBQDXkJtIr5ZGpmXKQpHcbd025gyWU&"></script>
<script>
    var pos = {
        lat: 48.903975,
        lng: 7.661313
    };

    var flightPath;
    var map;

    {% if ailleurs is defined %}
        map = new google.maps.Map(document.getElementById('carte'), {
            zoom: 5,
            center: pos
        });
    {% else %}
        map = new google.maps.Map(document.getElementById('carte'), {
            zoom: 10,
            center: pos
        });
    {% endif %}

    var marker = new google.maps.Marker({
        position: pos,
        map: map,
        name: "Aux temps d'avant",
        title: "Aux temps d'avant",
        icon: "/images/marqueurA.png"
    });

    $(document).on('click', '#trajet', function () {

        let position = $(this).val().split('|');

        var pos = {
            lat: parseFloat(position[0]),
            lng: parseFloat(position[1])
        };

        var marker = new google.maps.Marker({
            position: pos,
            map: map,
            name: position[2],
            title: position[2],
            icon: "/images/marqueurB.png"
        });
    })
</script>