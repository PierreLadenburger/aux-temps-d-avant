{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    {% include 'commun/menu.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-2 col-xl-2">
                {% include 'commun/menu-admin.html.twig' %}
            </div>
            <div class="col-sm-9 col-md-9 col-lg-10 col-xl-10">
                <h2 class="titre">Livre d'or</h2>
                <button type="button" class="btn btn-lg mb-3" data-toggle="modal" data-target="#exampleModal">
                    <i class="fas fa-plus"></i>
                    Ajouter
                </button>

                <div class="row">

                    <div class="col-lg-12 col-md-12">

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                {{ form_start(formulaire) }}

                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Ajouter un restaurant</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <section>
                                            <fieldset class="form-group">
                                                {{ form_row(formulaire.nom) }}
                                            </fieldset>
                                            <fieldset class="form-group">
                                                {{ form_row(formulaire.date) }}
                                            </fieldset>
                                            <fieldset class="form-group">
                                                {{ form_row(formulaire.commentaire) }}
                                            </fieldset>
                                        </section>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>-->
                                            {{ form_row(formulaire.ajouter) }}
                                    </div>
                                </div>
                                {{ form_end(formulaire) }}

                            </div>
                        </div>

                        <section>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Date</th>
                                        <th>Commentaire</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for livre in livres %}
                                        <tr>
                                            <td>{{ livre.nom }}</td>
                                            <td>{{ livre.date | date('d-m-Y')}}</td>
                                            <td>{{ livre.commentaire }}</td>
                                            <td><a href="{{ path('administration_restaurant_suppression', { id : livre.id }) }}"><i class="far fa-trash-alt text-danger"></i></a></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}

{% endblock %}
