{% extends 'base.html.twig' %}

{% block title %}Noël{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/noel.css">
{% endblock %}

{% block body %}
    {% include 'commun/menu.html.twig' %}
    <div class="container police">
        <h2 class="titre">Noël</h2>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row">
                    {% for photo in photos %}
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <a href="{{ photo.url }}" class="fancybox" rel="ligthbox">
                                <img src="{{ photo.url }}" class="zoom img-fluid" alt="noel{{ photo.id }}">
                            </a>
                        </div>
                    {% endfor %}
                </div>

            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <video width="400" controls src="/uploads/coup_de_coeur_de_noel.mov" autoplay=autoplay>
                </video>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/noel.js"></script>
{% endblock %}